pipeline  {
  agent any
  stages {
    stage("build") {
      steps {
        echo 'building the application...please wait'
      }
    }
    
    stage("test") {
      steps {
        echo 'testing the application...please wait'
      }
    }
    
    stage("deploy") {
      steps {
        echo 'deploying the application.'
      }
    }
  }
}
